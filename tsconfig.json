{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["tests", "dist", "prisma"]
}
